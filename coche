class Coche{
    //propiedades
    int cantpuertas;

    //metodo
    public static void main(String args[]) {

        //creación del objeto miCoche
        Coche miCoche = new Coche();
        // ultilización de la función suma puerta para agregar una puerta al objeto miCoche
        miCoche.sumapuerta() ;
        miCoche.sumapuerta() ;
        miCoche.sumapuerta() ;
        miCoche.sumapuerta() ;

        System.out.println("El coche tiene : " +miCoche.cantpuertas+" puertas");

    }

    //funcion agregar una puerta
    public void sumapuerta(){
        this.cantpuertas++;

    }
}
